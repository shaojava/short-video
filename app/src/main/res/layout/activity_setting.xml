<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/view_title"/>

    <com.yunbao.phonelive.custom.DrawableRadioButton
        android:id="@+id/btn_black_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black1"
        android:button="@null"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="settingClick"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="@string/black_list"
        android:textColor="@color/gray2"
        android:textSize="16sp"
        app:drawableSize="24dp"
        app:right_drawable="@mipmap/icon_right_arrow"
        />

    <View style="@style/line"/>

    <com.yunbao.phonelive.custom.DrawableRadioButton
        android:id="@+id/btn_auth"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black1"
        android:button="@null"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="settingClick"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="@string/my_auth"
        android:textColor="@color/gray2"
        android:textSize="16sp"
        app:drawableSize="24dp"
        app:right_drawable="@mipmap/icon_right_arrow"
        />

    <View style="@style/line"/>

    <com.yunbao.phonelive.custom.DrawableRadioButton
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black1"
        android:button="@null"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="settingClick"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="@string/about_us"
        android:textColor="@color/gray2"
        android:textSize="16sp"
        app:drawableSize="24dp"
        app:right_drawable="@mipmap/icon_right_arrow"
        />

    <View style="@style/line"/>

    <RelativeLayout
        android:id="@+id/btn_check_update"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:onClick="settingClick"
        >

        <com.yunbao.phonelive.custom.DrawableRadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black1"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="@string/check_update"
            android:textColor="@color/gray2"
            android:textSize="16sp"
            app:drawableSize="24dp"
            app:right_drawable="@mipmap/icon_right_arrow"
            />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:textColor="@color/gray2"
            android:textSize="16sp"
            />
    </RelativeLayout>


    <View style="@style/line"/>

    <RelativeLayout
        android:id="@+id/btn_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:onClick="settingClick"
        >

        <com.yunbao.phonelive.custom.DrawableRadioButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/black1"
            android:button="@null"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:text="@string/clear_cache"
            android:textColor="@color/gray2"
            android:textSize="16sp"
            app:drawableSize="24dp"
            app:right_drawable="@mipmap/icon_right_arrow"
            />

        <TextView
            android:id="@+id/cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:textColor="@color/gray2"
            android:textSize="16sp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@color/black1"
        android:gravity="center"
        android:onClick="settingClick"
        android:text="@string/logout"
        android:textColor="@color/global"
        android:textSize="16sp"
        />

</LinearLayout>